            android:name=".SplashApp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Principal"
            android:label="@string/title_activity_identificacion" >
        </activity>
        <activity
            android:name=".Redireccion"
            android:label="@string/title_activity_perfil" >
        </activity>
        <activity
            android:name=".Registro"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name=".Desplegue"
            android:label="@string/title_activity_desplegue" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".Identificacion"
            android:label="@string/title_activity_splash_app" >
        </activity>
        <activity
            android:name=".SplasDesarrollador"
            android:label="@string/title_activity_splas_desarrollador" >
        </activity>
        <service 
            android:name="com.enfiv.notitv.MyAlarmService">
        </service>
    </application>

</manifest>
